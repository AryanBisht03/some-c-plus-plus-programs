#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cout<<"enter the number of elements you want to enter"<<endl;
	cin>>n;
	
		int *p;
	p=new int[n];
	cout<<"enter the elements"<<endl;
	for(int i=0;i<(n);i++)
	{
		cin>>p[i];
	}
	for(int i=0;i<(n);i++)
	{
		cout<<p[i]<<" ";
	}
	for(int i=0;i<(n-1);i++)
	{
	for(int j=0;j<(n-1);j++)
	{
		if(p[j]>p[j+1])
		{
			int temp;
			temp=p[j];
			p[j]=p[j+1];
			p[j+1]=temp;
		}
		}	
	}
	cout<<endl<<"the sorted array is-->  ";
	for(int i=0;i<n;i++)
	{
		cout<<p[i]<<" ";
	}
	cout<<endl;
	int key;
	cout<<"enter the number you want to search "<<endl;
	cin>>key;
	int l=0;
	int h=n-1;
	int mid=(l+h)/2;
	while(l<=h)
	{
		if(p[mid]==key)
		{
			cout<<"founded at "<<mid;
		return 0;
		}
		else if(p[mid]<key)
		l=mid+1;
		
		else
		h=mid-1;
	}

	cout<<"not founded";
}

